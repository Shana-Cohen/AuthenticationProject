@model AdsViewModel

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 70px;">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="jumbotron">
                    @foreach (var ad in Model.Ads)
                    {
                        <h5>Listed on @ad.DateSubmitted.ToLongDateString()</h5>
                        <h5>Phone Number: @ad.PhoneNumber</h5>
                        <h3>Description:</h3>
                        <p>@ad.Description</p>
                        <form method="post" action="/home/deletead">
                            <input type="hidden" name="id" value="@ad.Id" />
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    }

                </div>
            </div>
        </div>
    </main>
</div>